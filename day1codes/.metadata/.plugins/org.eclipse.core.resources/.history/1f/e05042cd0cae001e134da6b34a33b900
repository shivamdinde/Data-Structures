package Algorithms;

public class QuickSort {

	static void quickSort(int a[],int start,int end) {
		
		int i=start;
		int j=end;
		int pivot=start;
		
		while(i<j) {
			while(a[i]<a[pivot])
				i++;
			while(a[i]>a[pivot])
				i++;
			if(i<j) {
				int t=a[i];
				a[i]=a[j];
				a[j]=t;
			}
			if(i<end)
				quickSort(a, i+1, end);
			if(j>start)
				quickSort(a, start, j-1);
				
			
		}
		
		
	}
	public static void main(String[] args) {
		
		int a[]= {2,10,1,5,3};
		
		QuickSort.quickSort(a);
		for(int i=0;i<a.length;i++) {
			System.out.print(a[i]+", ");
		}
	}

}
